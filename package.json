  "scripts": {
    "clean": "rm -rf artifacts build cache",
    "compile": "hardhat compile",
    "deploy": "hardhat deploy --network",
    "prep": "ts-node prep.ts",
    "test": "hardhat test",
    "preprocess": "ts-node scripts/pre-process-json.ts",
